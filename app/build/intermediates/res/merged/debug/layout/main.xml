<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:isScrollContainer="true"
	android:background="@drawable/image"
	android:scrollbarAlwaysDrawVerticalTrack="true"
	>

	<ScrollView
		android:id="@+id/scrollmain"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:scrollbars="none" >
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="fill_parent"
			android:layout_marginTop="0dp" >


			<ImageButton
				android:contentDescription="For New Account"
				android:id="@+id/newacc"
				android:scaleType="fitXY"
				android:layout_marginTop="50dp"
				android:layout_width="148dp"
				android:layout_height="110dp"
				android:layout_alignParentRight="true"
				android:layout_marginRight="10dp"
				android:padding="0dp"
				android:src="@drawable/newacc" />

			<ImageButton
				android:id="@+id/accList"
				android:scaleType="fitXY"
				android:layout_marginTop="10dp"
				android:layout_width="148dp"
				android:layout_height="110dp"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="10dp"
				android:padding="0dp"
				android:src="@drawable/listacc" />

			<ImageButton
				android:id="@+id/recTrans"
				android:scaleType="fitXY"
				android:layout_width="148dp"
				android:layout_height="110dp"
				android:layout_below="@id/newacc"
				android:layout_alignParentRight="true"
				android:layout_marginRight="10dp"
				android:padding="0dp"
				android:layout_marginTop="80dp"
				android:src="@drawable/recent" />

			<ImageButton
				android:id="@+id/search"
				android:scaleType="fitXY"
				android:layout_width="148dp"
				android:layout_height="110dp"
				android:layout_below="@id/accList"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="10dp"
				android:padding="0dp"
				android:layout_marginTop="40dp"
				android:src="@drawable/search" />

			<ImageButton
				android:id="@+id/addtrans"
				android:scaleType="fitXY"
				android:layout_width="148dp"
				android:layout_height="110dp"
				android:layout_below="@id/search"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="10dp"
				android:padding="0dp"
				android:layout_marginTop="70dp"
				android:src="@drawable/addtrans" />

			<ImageButton
				android:id="@+id/support"
				android:layout_width="148dp"
				android:layout_height="110dp"
				android:layout_alignLeft="@+id/recTrans"
				android:padding="0dp"
				android:scaleType="fitXY"
				android:layout_marginTop="405dp"
				android:src="@drawable/supp" />

		</RelativeLayout>
	</ScrollView>
</LinearLayout>
    